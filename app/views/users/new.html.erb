  <div class="d-flex align-items-center" style="height: 100%;">
    <div class="m-auto text-center" style="width: 300px;">
      <div class="register-container mt-5">
        <form id="sign-up-form" data-turbo="false">
          <div class="input-gr mb-3">
            <label for="user_email">Email</label>
            <input type="email" id="user_email" class="form-control" required placeholder="you@example.com">
          </div>
          <div id="error_message" class="text-danger" style="font-size:12px;"></div>
          <div class="button-gr text-center">
            <button type="submit" class="btn w-100 mt-4" style="background-color: #FAD02C; border-color: #FAD02C; color: #000;">仮メール送信</button>
          </div>
        </form>
        <div id="firebaseui-auth-container" class="my-3"></div>
        <div class="text-center">
          <%= link_to "アカウントお持ちの方は、ログイン", login_path, class: "d-block mt-3", style: "font-size:14px; text-decoration:none;" %>
        </div>
      </div>
    </div>
  </div>
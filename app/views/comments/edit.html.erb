<div class="card mt-3 p-2 media position-relative">
    <p class="card-text fs-6"><%= @users.name + '  ' %><%= @content.created_at.strftime("%F") %></p>
    <h5 class="card-title"><%= @content.title %></h5>
    <div  class="card-img-top">
        <%= image_tag(@content.img_file) %>  
    </div>
    <div class="card-body">
        <p class="card-text"><%= @content.summarized_text %></p>
    </div> 

    <%# edit comment %>
    <%= form_with model: @comment do |f| %>
        <%= f.text_field :comment, class: "form-control  mx-3 my-3 w-75 " %>
        <%= f.submit "submit", class:"btn btn-light mx-3 w-25 py-2"  %>
        <%= link_to "Cancel", :back, class:"btn btn-light mx-3 w-25 py-2"  %>
    <% end %>

</div> 
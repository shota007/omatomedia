<% if logged_in? %>
    <% if content.favorited_by?(current_user) %>
    <%= link_to content_favorites_path(content), data: { turbo_method: :delete } do %>
        ♥ <%= content.favorites.count %>
        <% end %>
    <% else %>
        <%= link_to content_favorites_path(content), data: { turbo_method: :post } do %>
        ♥ <%= content.favorites.count %>
        <% end %>
    <% end %>
<% else %>
    ♥ <%= content.favorites.count %>
<% end %>
